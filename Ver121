    <!-- JavaScript -->
    <script>
        // Menu functionality
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const menuToggle = document.getElementById('menu-toggle');
        const desktopMenu = document.getElementById('desktop-menu');
        
        let menuVisible = true;

        // Mobile menu toggle
        mobileMenuToggle.addEventListener('click', () => {
            mobileMenu.classList.add('open');
        });

        mobileMenuClose.addEventListener('click', () => {
            mobileMenu.classList.remove('open');
        });

        // Hide/show menu for all devices
        menuToggle.addEventListener('click', () => {
            menuVisible = !menuVisible;
            
            if (menuVisible) {
                desktopMenu.style.display = 'flex';
                mobileMenuToggle.style.display = 'block';
                menuToggle.innerHTML = `
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H3m12 0l-3-3m3 3l-3 3m6-3h6"></path>
                    </svg>
                `;
            } else {
                desktopMenu.style.display = 'none';
                mobileMenuToggle.style.display = 'none';
                mobileMenu.classList.remove('open');
                menuToggle.innerHTML = `
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                `;
            }
        });

        // Smooth scrolling
        function scrollToTools() {
            document.getElementById('tools').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        // Tool opening functionality
        function openTool(url, external = false) {
            if (external) {
                window.open(url, '_blank');
            } else {
                window.location.href = url;
            }
        }

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!mobileMenu.contains(e.target) && !mobileMenuToggle.contains(e.target)) {
                mobileMenu.classList.remove('open');
            }
        });

        // Newsletter signup functionality
        const newsletterButton = document.querySelector('button[type="submit"]');
        if (newsletterButton) {
            newsletterButton.addEventListener('click', (e) => {
                e.preventDefault();
                const email = e.target.previousElementSibling.value;
                if (email) {
                    alert('Thank you for subscribing! We\'ll keep you updated on new tools and features.');
                    e.target.previousElementSibling.value = '';
                }
            });
        }

        // Add loading animation
        window.addEventListener('load', function() {
            document.body.style.opacity = '1';
        });

        // Performance optimization - Preload critical pages
        const criticalPages = [
            'passportsizephoto',
            'hourlysalarycalculator', 
            'cvbanao',
            'fairshare',
            'contact.html',
            'faq.html',
            'blog-post-1.html'
        ];

        criticalPages.forEach(page => {
            const link = document.createElement('link');
            link.rel = 'prefetch';
            link.href = page;
            document.head.appendChild(link);
        });
    </script>
</body>
</html>
